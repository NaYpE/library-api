type Query {
  # Get Book
  getBook(id: ID!): Book
  # Get Books
  getAllBooks: [Book]
}

type Mutation {
  # Add Book
  addBook(title: String!, author: String!): Book
  # Update Book
  updateBook(id: ID!, title: String, author: String): Book
  # Delete Book
  deleteBook(id: ID!): Book
}

type Book {
  id: ID!
  pageCount: Int
  title: String!
  author: String!
}

type Author {
  id: ID!
  name: String!
  books: [Book]
}
